{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Modulo {{ modulo.nombre_corto }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar MÃ³dulo ' + modulo.nombre_corto) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'modulo_id': modulo.id} %}
        {% call f.form_tag('modulos.edit', fid='modulo_form', **form_kwargs) %}
            {% call f.form_group(form.nombre) %}{% endcall %}
