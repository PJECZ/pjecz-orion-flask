{% extends 'personas/detail_datos_generales.jinja2' %}

{% block content %}
    {{ super() }}
    <!-- Ver Licencias -->
    {% if current_user.can_view("LICENCIAS") %}
    {% call detail.card("Listado de licencias") %}
        <!-- DataTable Licencias -->
        <table id="licencias_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Período</th>
                    <th>Días</th>
                    <th>Tipo</th>
                    <th>Motivo</th>
                </tr>
            </thead>
        </table>
        <a href="{{url_for('licencias.new_with_persona_id', persona_id=persona.id)}}" class="btn btn-primary">Agregar Licencia</a>
    {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {{ super() }}
    <!-- Activar btn de seccion -->
    <script>
        const boton = document.getElementById('btn_licencias');
        boton.classList.add('active');
        boton.href = "{{url_for('personas.detail', persona_id=persona.id)}}";
    </script>
    <!-- DataTables -->
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    {% if current_user.can_view("LICENCIAS") %}
        <script>
            // DataTable Licencias
            const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
            let configDataTable = constructorDataTable.config();
            configDataTable['ajax']['url'] = '/licencias/datatable_json';
            configDataTable['ajax']['data'] = {"estatus": "A", "persona_id": {{ persona.id }}};
            configDataTable['columns'] = [
                { data: 'detalle' },
                { data: 'dias' },
                { data: 'tipo' },
                { data: 'motivo' }
            ];
            configDataTable['columnDefs'] = [
                {
                    targets: 0, // detalle
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.periodo + '</a>';
                    }
                }
            ];
            // Filtros Licencias
            const filtrosLicencias = new FiltrosDataTable('#licencias_datatable', configDataTable);
            filtrosLicencias.precargar();
        </script>
    {% endif %}
{% endblock %}