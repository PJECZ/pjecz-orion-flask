{# Mosaic #}
{%- macro mosaics(title='') -%}
    <div class="container px-2">
        {% if title !=''%}<h3 class="pb-2">{{ title }}</h3>{% endif %}
        <div class="row g-4 py-2 row-cols-1 row-cols-lg-3">
            {{ caller () }}
        </div>
    </div>
{%- endmacro -%}

{# Mosaic element #}
{%- macro mosaics_card(label, url, icon) -%}
            <div class="feature col">
                <a href="{{ url }}" class="icon-link">
                    <div class="feature-icon bg-primary bg-gradient">
                        <span class="iconify" data-icon="{{ icon }}" style="font-size: 48px;"></span>
                    </div>
                </a>
                <h3>{{ label }}</h3>
                {{ caller () }}
            </div>
{%- endmacro -%}

{# Button small #}
{%- macro button_sm(label, url, icon='', target='', color_class='btn-success') -%}
    <a class="btn btn-block btn-sm {{ color_class }} w-100 mb-2" href="{{ url }}" {% if target %}target="{{ target }}"{% endif %}>
        {% if icon %}<span class="iconify" data-icon="{{ icon }}"></span>{% endif %}
        {{ label }}
    </a>
{%- endmacro -%}

{# Button medium #}
{%- macro button_md(label, url, icon='', target='', color_class='btn-success') -%}
    <a class="btn btn-block btn-md {{ color_class }} w-100 mb-2" href="{{ url }}" {% if target %}target="{{ target }}"{% endif %}>
        <span class="iconify" data-icon="{{ icon }}"></span> {{ label }}
    </a>
{%- endmacro -%}

{# Button extra large #}
{%- macro button_xl(label, url, icon='', target='', color_class='btn-success') -%}
    <a class="btn btn-block btn-xl {{ color_class }} w-100 mb-2" href="{{ url }}" {% if target %}target="{{ target }}"{% endif %}>
        <span class="iconify" data-icon="{{ icon }}"></span> {{ label }}
    </a>
{%- endmacro -%}
